generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  routines  Routine[]
  logs      Log[]
  createdAt DateTime @default(now())
}

model Routine {
  id        String   @id @default(uuid())
  userId    String
  name      String
  enabled   Boolean
  time      String
  days      String[]
  lastRunAt DateTime?
  actions   Action[]
  logs      Log[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Action {
  id        String @id @default(uuid())
  routineId String
  type      String
  value     String
  args      String[]
  order     Int

  routine Routine @relation(fields: [routineId], references: [id])
}

model Log {
  id         String   @id @default(uuid())
  userId     String
  routineId  String
  actionType String
  status     String
  message    String?
  createdAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  routine Routine @relation(fields: [routineId], references: [id])
}
